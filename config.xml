<?xml version='1.0' encoding='utf-8'?>
<widget id="cz.drud.cordovaReactStarterkit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cordova React Starter Kit</name>
    <description>
        Cordova App Starter Kit with React and Redux
    </description>
    <author email="drud@drud.cz" href="http://drud.cz">
        Dmitry Druganov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-mobile-accessibility" spec="git+https://github.com/phonegap/phonegap-mobile-accessibility.git" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="^0.8.5" />
    <engine name="android" spec="^6.2.3" />
</widget>
