<?xml version='1.0' encoding='utf-8'?>
<widget id="com.zerotwos.sleepplaning" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sleep Planing</name>
    <description>
        Cordova App Starter Kit with React and Redux
    </description>
    <author email="drud@drud.cz" href="http://drud.cz">
        sss
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
        <allow-intent href="market:*" />
    </platform>
    <config-file mode="merge" parent="/*" target="AndroidManifest.xml">
        <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera.autofocus" />
    </config-file>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-mobile-accessibility" spec="git+https://github.com/phonegap/phonegap-mobile-accessibility.git" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="^0.8.5" />
    <plugin name="cordova-plugin-intent-action" spec="https://github.com/ngocdaothanh/cordova-plugin-intent-action.git" />
    <plugin name="zerotwos.setalarm" spec="0.0.4" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
